<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="vm"
                type="com.dr.trainup.statistics.vm.DateGroupVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_spacing_10"
                android:layout_marginTop="@dimen/dimen_spacing_10"
                android:drawableStart="@drawable/ic_today_black_24dp"
                android:drawablePadding="@dimen/dimen_spacing_10"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@{vm.date}"
                tools:text="20.03.2020" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
